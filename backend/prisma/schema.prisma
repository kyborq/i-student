// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  PREFECT
}

model Group {
  id    String @id @default(uuid())
  name  String
  users User[]
}

model User {
  id      String @id @default(uuid())
  name    String
  role    Role
  groupId String
  group   Group  @relation(fields: [groupId], references: [id])
}
